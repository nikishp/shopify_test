
html{
  padding-bottom: 0 !important;
}

#preview-bar-iframe{
  display: none !important;
}




*{
  box-sizing: border-box;

  &::placeholder{
    color: inherit;
    opacity: 1;
    transition: all .25s linear;
    &:focus::placeholder{
      opacity: 0
    }
  }
}


body{
  margin: 0;
  padding: 0;
  font-size: 16px;
  line-height: 1.2;
  font-weight: 400;
  color: #202020;
  font-family: 'Mulish', sans-serif;
}

.container{
  max-width: 1176px;
  width: 100%;
  padding-right: 10px;
  padding-left: 10px;
  margin-right: auto;
  margin-left: auto;
}
.row{
  display: flex;
  flex-wrap: wrap;
  margin-right: -10px;
  margin-left: -10px;
}

.col{
  width: 100%;
  flex: 0 0 100%;
  max-width: 100%;
  padding-right: 10px;
  padding-left: 10px;
}
.col-6{
  flex: 0 0 50%;
  max-width: 50%;
  padding-right: 10px;
  padding-left: 10px;
}



[class*='-aic']{
  align-items: center;
}

button{
  cursor: pointer;
  background: rgba(0, 0, 0, 0);
  border: 0;
  &:focus{
    outline: none;
  }
}

img{
  max-width: 100%;
  width: auto;
}



.header{
  position: relative;
  padding: 14px 0;
}

.header__box{
  display: flex;
  // justify-content: space-between;
  align-items: center;
}

.logo{
  display: block;
  margin-right: 20px;
  font-size: 0;
}

.hamburger{
  display: none;
  font-size: 0;
  cursor: pointer;
}
.header__content {
  margin-left: auto;
  transition: all .25s linear;
}
.header__content-close{
  display: none;
  margin-bottom: 22px;
  cursor: pointer;
  font-size: 0;
}
.nav{
  font-size: 21px;
  font-weight: bold;
}

.nav__list {
  display: flex;
  margin: 0;
  padding: 0;
  list-style-type: none;
  li:last-child{
    color: #CC0000;
    text-transform: uppercase;
  }
  a{
    display: block;
    padding: 8px 16px;
    color: inherit;
    text-decoration: none;
    &:hover{
      text-decoration: underline;
    }
  }
}

.search-btn{
  display: block;
  padding: 12px;
  svg{

  }
}


.basket{
  display: block;
  padding: 12px;
  padding-right: 0;
  cursor: pointer;
  font-size: 0;
}


.search-form{
  display: none;
  // background: silver;
}
.search-form__fied{
  position: relative;
  font-weight: bold;
  color: rgba(255, 255, 255, .3);
  input{
    display: block;
    width: 100%;
    padding: 13px 0; 
    border: 0;
    outline: none;
    font-size: inherit;
    color: inherit;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0);
  }

}
.search-form__submit{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  // background: red;
  svg{
    width: 24px;
    height: 24px;
    circle,path{
      stroke: rgba(255, 255, 255, .3);
    }
  }
}
body.nav-open{
  overflow: hidden;
}

























@media only screen and (max-width: 991px){
  .col-6{
    flex: 0 0 100%;
    max-width: 100%;
  }
  .header__box{
    justify-content: space-between;
  }
  .logo{
    margin: 0 10px;
  }
  .basket{
    padding-left: 7px;
  }
  .hamburger{
    display: block;
  }

  .search-btn{
    display: none;
  }
  .header__content{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 3;
    height: 100vh;
    padding: 20px;
    color: #fff;
    background: #131824;
    overflow-y: auto;
    transform: translateX(-100%);
    opacity: 0;
    &.active{
     transform: translateX(0);
     opacity: 1;
   }
 }

 .nav__list{
  display: block;
  a{
    padding: 15px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    &:hover{
      text-decoration: none;
    }
  }
}
.search-form{
  display: block;
}
.header__content-close{
  display: block;
}

}/*991*/


