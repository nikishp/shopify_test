$def: #202020;
$red: #CC0000;



html{
  padding-bottom: 0 !important;
}

#preview-bar-iframe{
  display: none !important;
}




*{
  box-sizing: border-box;

  &::placeholder{
    color: inherit;
    opacity: 1;
    transition: all .25s linear;
    &:focus::placeholder{
      opacity: 0
    }
  }
}


body{
  margin: 0;
  padding: 0;
  font-size: 16px;
  line-height: 1.2;
  font-weight: 400;
  color: $def;
  font-family: 'Mulish', sans-serif;
}

.container{
  max-width: 1176px;
  width: 100%;
  padding-right: 10px;
  padding-left: 10px;
  margin-right: auto;
  margin-left: auto;
}
.row{
  display: flex;
  flex-wrap: wrap;
  margin-right: -10px;
  margin-left: -10px;
}

.col{
  width: 100%;
  flex: 0 0 100%;
  max-width: 100%;
  padding-right: 10px;
  padding-left: 10px;
}
.col-6{
  flex: 0 0 50%;
  max-width: 50%;
  padding-right: 10px;
  padding-left: 10px;
}



[class*='-aic']{
  align-items: center;
}

button{
  cursor: pointer;
  background: rgba(0, 0, 0, 0);
  border: 0;
  &:focus{
    outline: none;
  }
}

img{
  max-width: 100%;
  width: auto;
}
h2{
  font-size: 32px;
  line-height: 1.4;
}
.btn{
  position: relative;
  z-index: 1;
  width: 164px;
  height: 48px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  min-width: 100px;
  cursor: pointer;
  user-select: none;
  text-align: center;
  color: #FFFFFF;
  text-decoration: none;
  font-weight: bold;
  text-shadow: 0px -1px 0px rgba(32, 32, 32, 0.33);
  transition: all .25s linear;
  background: $red;
  border: 1px solid #950000;
  box-shadow: inset 0px -2px 2px rgba(32, 32, 32, 0.33);
  border-radius: 4px;
  &:hover{
    transform: translateY(5px);
  }
}

















.header{
  position: relative;
  padding: 14px 0;
}

.header__box{
  display: flex;
  // justify-content: space-between;
  align-items: center;
}

.logo{
  display: block;
  margin-right: 20px;
  font-size: 0;
}

.hamburger{
  display: none;
  font-size: 0;
  cursor: pointer;
}
.header__content {
  margin-left: auto;
  transition: all .25s linear;
}
.header__content-close{
  display: none;
  margin-bottom: 22px;
  cursor: pointer;
  font-size: 0;
}
.nav{
  font-size: 21px;
  font-weight: bold;
}

.nav__list {
  display: flex;
  margin: 0;
  padding: 0;
  list-style-type: none;
  li:last-child{
    color: $red;
    text-transform: uppercase;
  }
  a{
    display: block;
    padding: 8px 16px;
    color: inherit;
    text-decoration: none;
    &:hover{
      text-decoration: underline;
    }
  }
}

.search-btn{
  display: block;
  padding: 12px;
  svg{

  }
}


.basket{
  position: relative;
  display: block;
  padding: 12px;
  padding-right: 0;
  cursor: pointer;
  // font-size: 0;
  .cart-count{
    position: absolute;
    top: 7px;
    right: -6px;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    line-height: 1;
    font-size: 9px;
    color: #fff;
    border-radius: 50%;
    background: $red;
  }
}


.search-form{
  display: none;
  // background: silver;
}
.search-form__fied{
  position: relative;
  font-weight: bold;
  color: rgba(255, 255, 255, .3);
  input{
    display: block;
    width: 100%;
    padding: 13px 0; 
    border: 0;
    outline: none;
    font-size: inherit;
    color: inherit;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0);
  }

}
.search-form__submit{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  // background: red;
  svg{
    width: 24px;
    height: 24px;
    circle,path{
      stroke: rgba(255, 255, 255, .3);
    }
  }
}
body.nav-open{
  overflow: hidden;
}







.collection-list{
  padding: 70px 0;
  h2{
    margin-bottom: 35px;
    text-align: center;
  }
}
.collection-list__box{
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10px;
}

.collection-list__item{
  position: relative;
  width: calc(50% - 20px);
  display: block;
  margin: 10px;
  font-size: 0;
  text-decoration: none;
  &:hover{
    .collection-list__item-content b{
      color: $red;
    }
  }
}
.collection-list__item-img{
  display: block;
}
.collection-list__item-content{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  padding: 15px;
  font-size: 20px;
  line-height: 1.3;
  color: $def;
  background: rgba(255, 255, 255, .7);
  b,span{
    display: block;
    transition: color .25s linear;
  }
  span{
    font-size: 16px;
  }
}

.top{
  padding: 70px 0;
  color: #fff;
  text-align: center;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size: cover;
  h2{
    margin-top: 160px;

  }
}

.top__price{
  display: flex;
  justify-content: center;
  margin-top: 24px;
  font-weight: bold;
}
.top__price-item{
  margin: 0 5px;
}
.top__price-item--old{
  font-weight: normal;
  text-decoration-line: line-through;
  text-transform: uppercase;
  color: rgba(255, 255, 255, 0.33);
}

.top__action{
  margin-top: 33px;
  text-align: center;
}

.product-block{
  padding-bottom: 70px;
}

/*=========================*/
.modal {
 max-width: 575px;
 background: white;
 border: 5px solid #111;
 padding: 50px 65px;
 position: fixed;
 z-index: 1000;
}
.modal .close {
 position: absolute;
 top: 10px;
 right: 20px;
 font-size: 20px;
 cursor: pointer;
}
.modal--overlay {
 position: fixed;
 top: 0;
 bottom: 0;
 left: 0;
 right: 0;
 z-index: 100;
 background-color: rgba(0, 0, 0, 0.4);
}
.hidden {
 display: none;
}
/*=========================*/




@media only screen and (max-width: 991px){
  .col-6{
    flex: 0 0 100%;
    max-width: 100%;
  }
  .header__box{
    justify-content: space-between;
  }
  .logo{
    margin: 0 10px;
  }
  .basket{
    padding-left: 7px;
  }
  .hamburger{
    display: block;
  }

  .search-btn{
    display: none;
  }
  .header__content{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 3;
    height: 100vh;
    padding: 20px;
    color: #fff;
    background: #131824;
    overflow-y: auto;
    transform: translateX(-100%);
    opacity: 0;
    &.active{
     transform: translateX(0);
     opacity: 1;
   }
 }

 .nav__list{
  display: block;
  a{
    padding: 15px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    &:hover{
      text-decoration: none;
    }
  }
}
.search-form{
  display: block;
}
.header__content-close{
  display: block;
}
h2{
  font-size: 26px;
  line-height: 1.2;
  br{
    display: none;
  }
}





}/*991*/



@media only screen and (max-width: 768px){
  .collection-list__item-content{
    padding: 10px;
    font-size: 18px;
  }


  }/*768px*/


  @media only screen and (max-width: 576px){
    .collection-list__item {
      width: calc(100% - 20px);
    }
    }/*576px*/

























